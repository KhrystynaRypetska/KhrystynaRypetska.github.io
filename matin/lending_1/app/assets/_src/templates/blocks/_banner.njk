    {%include '../chunks/_header.njk' %}
    <div class="container">

        <div class="banner">
            <div class="main__title__wrapper">
                <div class="lines-1 animate" style="background-image: url('../assets/img/svg/line1.svg')"></div>

                <h1 class="main__title">
                    <span class="title__text caption ">[Квадрат]</span>
                    <span class="title__text">—</span>
                    <span class="title__text">цифровые решения</span>
                </h1>
            </div>


            <div class="icons-block">
                <div class="lines-group">
                    <div class="lines-2 animate" style="background-image: url('../assets/img/svg/line2.svg')"></div>
                    <div class="lines-3 animate" style="background-image: url('../assets/img/svg/line1-1.svg')"></div>
                </div>
                <div class="icons-block__item">
                    <div class="icons-block__img">
                        {% include '../svg/banner/Razrabotka.njk' %}
                    </div>
                    <div class="icons-block__text">
                        <h2>
                            Разработка
                            крупных ИТ-проектов
                        </h2>
                    </div>

                </div>
                <div class="icons-block__item">
                    <div class="icons-block__img">
                        {% include '../svg/banner/Sozdanie.njk' %}
                    </div>
                    <div class="icons-block__text">
                        <h2>
                            Создание
                            корпоративных web-сайтов, мобильных приложений
                        </h2>
                    </div>

                </div>
                <div class="icons-block__item">
                    <div class="icons-block__img">
                        {% include '../svg/banner/Vnedrenie.njk' %}
                    </div>
                    <div class="icons-block__text">
                        <h2>
                            Внедрение
                            ИТ-решений
                            в бизнес-процессы организаций
                        </h2>
                    </div>

                </div>

                <div class="lines-4 animate" style="background-image: url('../assets/img/svg/line2.svg')"></div>
            </div>

            <div class="banner__btn-wrap">
                <div class="lines-5 animate" style="background-image: url('../assets/img/svg/line1.svg')"></div>

                {% include '../components/_main-button.njk' %}
            </div>
        </div>

    </div>

</section>