<section class="section--banner section" id="banner">
    <div class="section--banner__bg"></div>
    {%include '../chunks/_header.njk' %}

    <div class="container">

        <div class="banner">
            <div class="plus title-plus">
                <span class="plus-w"></span>
                <span class="plus-h"></span>
            </div>
            <div class="plus icons-plus">
                <span class="plus-w"></span>
                <span class="plus-h"></span>
            </div>
            <div class="plus btn-plus">
                <span class="plus-w"></span>
                <span class="plus-h"></span>
            </div>
            <div class="main__title__wrapper">
                <div class="lines-1" style="background-image: url('./assets/img/svg/line1.svg')"></div>

                <h1 class="main__title">
                    <span itemprop="name">
                       <span class="title__text caption ">[Квадрат]</span>
                       <span class="title__text text-line">—</span>
                       <span class="title__text">цифровые решения</span>
                    </span>

                </h1>
            </div>


            <div class="icons-block">
                <div class="lines-group">
                    <div class="lines-2" style="background-image: url('./assets/img/svg/line2.svg')"></div>
                    <div class="lines-3" style="background-image: url('./assets/img/svg/line1-1.svg')"></div>
                </div>
                <div class="icons-block__item icb-1">
                    <div class="icons-block__img">
                        {% include '../svg/banner/Razrabotka.njk' %}
                    </div>
                    <div class="icons-block__text">
                        <h2>
                            Разработка
                            крупных ИТ-проектов
                        </h2>
                    </div>

                </div>
                <div class="icons-block__item icb-2">
                    <div class="icons-block__img">
                        {% include '../svg/banner/Sozdanie.njk' %}
                    </div>
                    <div class="icons-block__text">
                        <h2>
                            Создание
                            корпоративных web-сайтов, мобильных приложений
                        </h2>
                    </div>

                </div>
                <div class="icons-block__item icb-3">
                    <div class="icons-block__img">
                        {% include '../svg/banner/Vnedrenie.njk' %}
                    </div>
                    <div class="icons-block__text">
                        <h2>
                            Внедрение
                            ИТ-решений
                            в бизнес-процессы организаций
                        </h2>
                    </div>

                </div>

                <div class="lines-4" style="background-image: url('./assets/img/svg/line2.svg')"></div>
            </div>

            <div class="banner__btn-wrap">
                <div class="lines-5" style="background-image: url('./assets/img/svg/line1.svg')"></div>
                {% include '../components/_main-button.njk' %}
            </div>

        </div>

    </div>

</section>