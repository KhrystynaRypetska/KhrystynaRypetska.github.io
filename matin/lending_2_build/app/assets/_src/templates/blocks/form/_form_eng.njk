<section class="section--form section" id="clients">
    <div class="container">
        <div class="form">
            <div class="contacts-form" id="form">
                <h3 class="section__title">
                    Fill out the request for a project
                </h3>
                <form class="contact-form" id="contact-form"  action="http://landing.loc" method="POST" enctype="multipart/form-data" autocomplete="on">

                    <div class="form__wrapper">

                        <div class="form">

                            <div  class="form__fields">
                                <div class="form__field">
                                    <input class="input input_email" type="email" name="email" id="email">
                                    <label for="email">Email <span> *</span> </label>
                                    <div class="form__field__error form__field__error_email"></div>
                                </div>
                                <div class="form__field">
                                    <input class="input input_name" type="text" name="name" id="name">
                                    <label for="name">Name<span> *</span></label>
                                    <div class="form__field__error form__field__error_name"></div>
                                </div>
                                <div class="form__field">
                                    <input class="input input_tel" type="tel" name="tel" id="tel">
                                    <label for="tel">Contact number</label>
                                    <div class="form__field__error form__field__error_tel"></div>
                                </div>

                            </div>

                            <div class="form__textarea">
                                <div class="form__field ">
                                    <textarea class="input" name="text" id="text" style="max-width:100%;min-height:50px;height:100%;width:100%;"></textarea>
                                    <label for="text">Your request<span> *</span></label>
                                    <div class="form__field__error form__field__error_text"></div>
                                </div>
                                <div class="form__text"> <span> * </span> Required fields</div>

                                <div class="form__checkbox">
                                    <input type="checkbox" id="form__checkbox" name="agreement" class="input">
                                    <label for="form__checkbox" class="form__text"><span></span><p>I understand and agree with  <a href="Polit_konf.doc" class="break" > Privacy policy</a></p></label>
                                    <div class="form__field__error form__field__error_agreement"></div>
                                </div>
                            </div>

                        </div>

                        <input type="hidden" name="recaptcha_response" id="recaptchaResponse">
                        <input type="hidden" name="lang" id="lang" value="en">
                        <button disabled="disabled" class="clients-form__btn btn btn--l  btn--f" type="submit">
                            Leave a request
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>

</section>